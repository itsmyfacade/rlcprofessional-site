{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["astro/client"],
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": [
    ".astro/types.d.ts",
    "src/env.d.ts",
    "src",
    "**/*.astro",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": ["dist", "node_modules"]
}
