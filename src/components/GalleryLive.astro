import { fetchGalleryFeed, type GalleryItem } from "../lib/galleryFeed";

const { t, site, lang } = Astro.props as { t: any; site: any; lang: "en" | "es" };

const feedEn = site.galleryFeed?.en ?? "";
const feedEs = site.galleryFeed?.es ?? "";

const [itemsEn, itemsEs] = await Promise.all([fetchGalleryFeed(feedEn, 60), fetchGalleryFeed(feedEs, 60)]);

const mergedMap = new Map<string, GalleryItem>();
for (const it of [...itemsEn, ...itemsEs]) mergedMap.set(it.id, it);
const merged = Array.from(mergedMap.values());

merged.sort((a, b) => {
  const ta = a.createdAt ? Date.parse(a.createdAt) : 0;
  const tb = b.createdAt ? Date.parse(b.createdAt) : 0;
  return tb - ta;
});

const items: GalleryItem[] = merged.slice(0, 18);

const nav = t?.nav ?? {};
const gallery = t?.gallery ?? {};

const ui = {
  title: gallery.title ?? (lang === "es" ? "Trabajos Recientes (Antes y Después)" : "Recent Work (Before & After)"),
  subtitle:
    gallery.subtitle ??
    (lang === "es"
      ? "Resultados reales de pintura, lavado a presión, concreto y sellado en Central Florida."
      : "Real results from painting, pressure washing, concrete, and sealing across Central Florida."),
  empty:
    gallery.empty ??
    (lang === "es"
      ? "Pronto subiremos fotos. Por ahora, solicite un presupuesto - puede subir fotos en el formulario."
      : "Gallery updates are coming soon. For now, request a quote - photo uploads are supported."),
  before: gallery.before ?? (lang === "es" ? "Antes" : "Before"),
  after: gallery.after ?? (lang === "es" ? "Después" : "After"),
  viewMedia: gallery.viewMedia ?? (lang === "es" ? "Ver contenido" : "View Media"),
  openLink: gallery.openLink ?? (lang === "es" ? "Abrir enlace" : "Open shared link"),
  untitled: gallery.untitled ?? (lang === "es" ? "Proyecto reciente" : "Recent Project"),
  quoteCta: nav.quote ?? (lang === "es" ? "Cotizar" : "Get a Quote"),
  loading: gallery.loading ?? (lang === "es" ? "Cargando…" : "Loading…"),
};

function normalizeServiceLabel(s?: string) {
  const raw = (s ?? "").trim().toLowerCase();
  if (!raw) return "";
  // normalize accents + spacing + common punctuation
  const noAccents = raw.normalize("NFD").replace(/[\u0300-\u036f]/g, "");
  return noAccents
    .replace(/[’']/g, "")
    .replace(/\s+/g, " ")
    .replace(/\s*&\s*/g, " & ")
    .replace(/\s*\+\s*/g, " + ")
    .trim();
}

type ServiceKey =
  | "interior_painting"
  | "exterior_painting"
  | "concrete_install_repair"
  | "curbs_concrete_edging"
  | "pressure_washing"
  | "pressure_washing_sealing"
  | "roof_leak_repair"
  | "other";

const SERVICE_LABELS: Record<ServiceKey, { en: string; es: string }> = {
  interior_painting: { en: "Interior Painting", es: "Pintura Interior" },
  exterior_painting: { en: "Exterior Painting", es: "Pintura Exterior" },
  concrete_install_repair: { en: "Concrete Installation & Repair", es: "Instalación y Reparación de Concreto" },
  curbs_concrete_edging: { en: "Curbs & Concrete Edging", es: "Bordillos y Bordes de Concreto" },
  pressure_washing: { en: "Pressure Washing", es: "Lavado a Presión" },
  pressure_washing_sealing: { en: "Pressure Washing & Sealing", es: "Lavado a Presión y Sellado" },
  roof_leak_repair: { en: "Roof Leak Repair", es: "Reparación de Filtraciones en el Techo" },
  other: { en: "Other", es: "Otro" },
};

function detectServiceKey(serviceType: string): ServiceKey | null {
  const s = normalizeServiceLabel(serviceType);
  if (!s) return null;

  // ✅ Exact dropdown matches (EN)
  if (s === "interior painting") return "interior_painting";
  if (s === "exterior painting") return "exterior_painting";
  if (s === "concrete installation & repair" || s === "concrete installation and repair") return "concrete_install_repair";
  if (s === "curbs & concrete edging" || s === "curbs and concrete edging") return "curbs_concrete_edging";
  if (s === "pressure washing") return "pressure_washing";
  if (s === "pressure washing & sealing" || s === "pressure washing and sealing") return "pressure_washing_sealing";
  if (s === "roof leak repair") return "roof_leak_repair";
  if (s === "other") return "other";

  // ✅ Exact dropdown matches (ES) — with/without accents already handled by normalize
  if (s === "pintura interior") return "interior_painting";
  if (s === "pintura exterior") return "exterior_painting";
  if (s === "instalacion y reparacion de concreto") return "concrete_install_repair";
  if (s === "bordillos y bordes de concreto") return "curbs_concrete_edging";
  if (s === "lavado a presion") return "pressure_washing";
  if (s === "lavado a presion y sellado") return "pressure_washing_sealing";
  if (s === "reparacion de filtraciones en el techo") return "roof_leak_repair";
  if (s === "otro") return "other";

  // ✅ Smart fallback (client typed a variation)
  const hasPressure = s.includes("pressure washing") || s.includes("lavado a presion") || s.includes("lavado a presion");
  const hasSeal = s.includes("sealing") || s.includes("sellado");
  const hasRoof = s.includes("roof") || s.includes("techo") || s.includes("filtracion") || s.includes("goter");

  if (hasRoof) return "roof_leak_repair";
  if (hasPressure && hasSeal) return "pressure_washing_sealing";
  if (hasPressure) return "pressure_washing";
  if (s.includes("interior") || s.includes("pintura interior")) return "interior_painting";
  if (s.includes("exterior") || s.includes("pintura exterior")) return "exterior_painting";
  if (s.includes("concrete") || s.includes("concreto")) return "concrete_install_repair";
  if (s.includes("curb") || s.includes("bordill") || s.includes("borde")) return "curbs_concrete_edging";

  return null;
}

function translateService(serviceType: string | undefined | null, lang: "en" | "es") {
  const raw = (serviceType ?? "").trim();
  if (!raw) return "";
  const key = detectServiceKey(raw);
  if (!key) return raw; // unknown/custom -> show what client typed
  return lang === "es" ? SERVICE_LABELS[key].es : SERVICE_LABELS[key].en;
}

function hasAnyMedia(it: GalleryItem) {
  return Boolean(
    it.beforeUrl ||
      it.afterUrl ||
      it.videoUrl ||
      (it.morePhotoUrls && it.morePhotoUrls.length > 0) ||
      it.publicEmbedUrl ||
      it.publicLink
  );
}

function isTwoPhoto(it: GalleryItem) {
  return Boolean(it.beforeUrl && it.afterUrl && it.beforeUrl !== it.afterUrl);
}

function hasMulti(it: GalleryItem) {
  return Boolean(it.morePhotoUrls && it.morePhotoUrls.length > 1);
}

function singlePhotoSrc(it: GalleryItem) {
  return (it.morePhotoUrls && it.morePhotoUrls[0]) || it.beforeUrl || it.afterUrl || "";
}

function isDrive(u?: string) {
  return Boolean(u && /drive\.google\.com/i.test(u));
}

function looksLikeDriveId(u?: string) {
  if (!u) return false;
  const s = u.trim();
  return /^[a-zA-Z0-9_-]{20,200}$/.test(s) && !s.includes("/");
}

function driveId(u: string) {
  const s = u.trim();
  if (looksLikeDriveId(s)) return s;

  const m1 = s.match(/drive\.google\.com\/file\/d\/([^/]+)/i);
  if (m1?.[1]) return m1[1];

  const m2 = s.match(/[?&]id=([^&]+)/i);
  if (m2?.[1]) return m2[1];

  return null;
}

/** Option A: Drive /preview embed for links/IDs */
function drivePreview(u: string) {
  const id = driveId(u);
  if (!id) return null;
  return `https://drive.google.com/file/d/${id}/preview`;
}

// Backwards compatibility
function driveProxy(u: string) {
  const id = driveId(u);
  if (!id) return null;
  return `/api/drive-video/${id}`;
}

function isDriveProxySrc(u?: string) {
  return Boolean(u && /^\/api\/drive-video\/[^/]+$/i.test(u));
}

function isEmbedVideo(it: GalleryItem) {
  return Boolean(it.publicEmbedKind === "video" && (it.publicLink || it.publicEmbedUrl));
}

function isSinglePhoto(it: GalleryItem) {
  if (isEmbedVideo(it)) return false;

  return Boolean(
    (it.morePhotoUrls && it.morePhotoUrls.length === 1) ||
      (it.beforeUrl && !it.afterUrl) ||
      (it.afterUrl && !it.beforeUrl) ||
      (it.beforeUrl && it.afterUrl && it.beforeUrl === it.afterUrl)
  );
}

function normalizeVideoSrc(u?: string) {
  if (!u) return "";
  const s = u.trim();

  if (isDriveProxySrc(s)) return s;
  if (looksLikeDriveId(s)) return `/api/drive-video/${s}`;
  if (isDrive(s)) return driveProxy(s) || s;

  return s;
}
